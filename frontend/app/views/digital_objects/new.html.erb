<%= render :partial => "shared/breadcrumb", :locals => {:trail => [link_to("Browse Digital Objects", :controller => :digital_objects, :action => :index),"New Digital Object"]} %>

<%= form_for @digital_object, :as => "digital_object", :url => {:action => :create}, :html => {:class => 'form-horizontal'} do |f| %>
  <%= form_context :digital_object, @digital_object.to_hash(true) do |form| %>
    <div class="row-fluid">
       <div class="span3">
          <%= render :partial => "digital_objects/sidebar" %>
       </div> <!-- span3 -->
       <div class="span9 record-pane" id="object_container">

         <%= render :partial => "digital_objects/form_container", :locals => {:form => form} %>

         <div class="form-actions">
            <button type="submit" class="btn btn-primary">Save Digital Object</button>
            <%= link_to "Cancel", :back, :class => "btn btn-cancel" %>
         </div>
       </div>
    </div>
  <% end %>
<% end %>
