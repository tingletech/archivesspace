<%
   section_id = "linked_agent" if section_id.blank?
%>

<section id="<%= section_id %>">
  <h3><%= I18n.t("linked_agent._html.plural") %></h3>
  <div class="row-fluid">
    <div class="span3"><strong><%= I18n.t("linked_agent.role") %></strong></div>
    <div class="span8"><strong><%= I18n.t("linked_agent.ref") %></strong></div>
  </div>
  <% linked_agents.each_with_index do | link, index | %>
    <div class="row-fluid">
      <div class="span3 pull1">
        <%= I18n.t("linked_agent.role_#{link["role"]}") %>
      </div>
      <div class="span8 token-list">
        <%= render_token :object => link["resolved"]["ref"], 
                         :label => link["resolved"]["ref"]["names"][0]["sort_name"], 
                         :type => link["resolved"]["ref"]["agent_type"], 
                         :uri => link["resolved"]["ref"]["uri"] %>
      </div>
    </div>
  <% end %>
</section>