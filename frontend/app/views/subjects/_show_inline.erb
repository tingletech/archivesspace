<%
   section_id = "subjects" if section_id.blank?
%>

<section id="<%= section_id %>" class="subrecord-form-dummy">
  <h3><%= I18n.t("subject._html.plural") %></h3>
  <div class="subrecord-form-container">
    <div class="subrecord-form-fields">
      <div class="row-fluid">
        <div class="span3"><strong><%= I18n.t("subject.ref_id") %></strong></div>
        <div class="span8"><strong><%= I18n.t("subject.heading") %></strong></div>
      </div>
      <% subjects.each_with_index do | subject, index | %>
        <div class="row-fluid">
          <div class="span3 pull1">
            <%= subject["ref_id"] %>
          </div>
          <div class="span8 token-list">
            <%= render_token :object => subject,
                             :label => Subject.from_hash(subject).display_string,
                             :type => "subject",
                             :uri => subject['uri'] %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>