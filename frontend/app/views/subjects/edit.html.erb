<%= setup_context :object => @subject, :title => @subject.display_string %>

<%= form_for @subject, :as => "subject", :url => {:action => :update}, :html => {:class => 'form-horizontal'} do |f| %>
  <%= form_context :subject, @subject do |form| %>
    <div class="row-fluid">
      <div class="span3">
        <%= render :partial => "sidebar" %>
      </div>
      <div class="span9 record-pane">
        <h2><%= @subject.display_string %>  <span class="label label-info"><%= I18n.t("subject._html.singular") %></span></h2>
        <br/>
        <%= render :partial => "subjects/form", :locals => {:form => form} %>
        <div class="form-actions">
          <button type="submit" class="btn btn-primary"><%= I18n.t("actions.save_prefix") %> <%= I18n.t("subject._html.singular") %></button>
          <%= link_to I18n.t("actions.cancel"), :back, :class => "btn btn-cancel" %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
