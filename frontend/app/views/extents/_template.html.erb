<% define_template "extent", jsonmodel_definition(:extent) do |form| %>
  <div class="subrecord-form-fields">
    <%= form.label_and_select("portion", form.possible_options_for("portion")) %>
    <%= form.label_and_textfield("number") %>
    <%= form.label_and_select("extent_type", form.possible_options_for("extent_type")) %>
    <hr/>
    <%= form.label_and_textfield("container_summary") %>
    <%= form.label_and_textfield("physical_details") %>
    <%= form.label_and_textfield("dimensions") %>
  </div>
<% end %>
