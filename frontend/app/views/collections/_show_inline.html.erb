<div class="btn-group" style="float: right">
  <%= link_to "Edit", {:controller=>:collections, :action=>:edit, :id=>@collection.id, :anchor=>"collection_#{@collection.id}"}, :class=>"btn btn-small" %>
</div>

<h2><%= @collection.title %> <span class="label label-info">Collection</span></h2>

<br/>
<div class="tabbable">
  <ul class="nav nav-tabs">
    <li class="active"><a href="#basic-information" data-toggle="tab">Basic Information</a></li>
  </ul>
  <div class="tab-content">
    <div class="tab-pane active" id="basic-information">
       <div class="row-fluid label-and-value">
          <div class="span3">Title</div>
          <div class="span9"><%= @collection.title %></div>
       </div>
       <div class="row-fluid label-and-value">
          <div class="span3">Identifier</div>
          <div class="span9 identifier-display">
             <span class="identifier-display-part"><%= @collection.id_0 %></span><span class="identifier-display-part"><%= @collection.id_1 %></span><span class="identifier-display-part"><%= @collection.id_2 %></span><span class="identifier-display-part"><%= @collection.id_3 %></span>
          </div>
       </div>
    </div>
  </div>
</div>