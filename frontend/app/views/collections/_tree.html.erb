    {if defined('previous')}
      <a href="#${previous}" class="btn btn-mini"><span class="icon-arrow-left"></span></a>
    {else}
      <a disabled="disabled" class="btn btn-mini"><span class="icon-arrow-left"></span></a>
    {/if}
