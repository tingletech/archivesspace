<%= render :partial=>"shared/breadcrumb", :locals=>{:trail=>["Browse Collections"]} %>
<div class="row-fluid">
   <div class="span3">
      The facets/search filters will go here.
   </div>
   <div class="span9 record-pane">
      <div class="btn-group">
        <%= link_to "Create Collection", {:controller=>:collections, :action=>:new}, :class=>"btn" %>
      </div>
      <% if not @collections.blank? %>
         <h2>Collections</h2>
         <table class="table table-striped table-bordered table-condensed">
           <thead>
             <tr>
               <th>Title</th>
               <th width="70px"><!-- actions --></th>
             </tr>
           </thead>
           <tbody>
            <% @collections.each do |collection| %>
               <tr>
                <td><%= collection.title %></td>
                <td>
                   <div class="btn-group" style="float: right">
                     <%= link_to "View", {:controller=>:collections, :action=>:show, :id=>collection.id}, :class=>"btn btn-mini" %>
                     <%= link_to "Edit", {:controller=>:collections, :action=>:edit, :id=>collection.id}, :class=>"btn btn-mini" %>
                   </div>
                </td>
              </tr>
            <% end %>
           </tbody>
         </table>
      <% else %>
         <p class="alert alert-info">
            There are currently no Collections in this, <strong><%= session[:repo] %></strong>, repository.
         </p>
      <% end %>
   </div>
</div>
