            <li class="dropdown browse-container">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Browse <b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><%= link_to "Accessions", :controller => :accessions, :action => :index %></li>
