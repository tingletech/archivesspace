<div id="linker_browse_template"><!--
   <ul>
      {for item in items}
         <li>
            <label>
               {if config.multiplicity === "one"}
                 <input
                    type="radio"
                    name="linker-item"
                    value="${item.uri}"
                    data-object='${JSON.stringify(item)}'
                    {if $.inArray(item.uri, selected) >= 0} checked="checked"{/if}
                 />
               {else}
                 <input
                    type="checkbox"
                    name="linker-item"
                    value="${item.uri}"
                    data-object='${JSON.stringify(item)}'
                    {if $.inArray(item.uri, selected) >= 0} checked="checked"{/if}
                 />
               {/if}
               <span>
                {if config.format_property}
                  ${item[config.format_property]}
                {else}
                  ${AS.quickTemplate(config.format_template, item)}
                {/if}
               </span>
            </label>
         </li>
      {/for}
   </ul>
--></div>
<div id="linker_selected_template"><!--
   {if config.multiplicity === "many" || (config.multiplicity === "one" && items.length === 0)}
      <button type="button" class="btn btn-mini linker-add-button">Add ${config.label}</button>
   {/if}
   {if items.length > 0}
      <ul>
         {for item in items} 
            <li class="${item.json.jsonmodel_type}">
               <span class="icon-token"></span>
               <input type="hidden" name="${config.path}[${config.name}][]" value="${item}" />
               ${item}
            </li>
         {/for}
      </ul>
   {else}
      
   {/if}
--></div>
<div id="linker_selectedtoken_template"><!--
   <li id="${item.id.replace(/\//g,'_')}" class="${item.json.jsonmodel_type}">
      <span class="icon-token"></span>
      <input type="hidden" name="${config.path}[resolved][${config.name}]{if config.multiplicity != 'one'}[]{/if}" />
      <input type="hidden" name="${config.path}[${config.name}]{if config.multiplicity != 'one'}[]{/if}" value="${item.id}" />
      ${item.name}
   </li>
--></div>

