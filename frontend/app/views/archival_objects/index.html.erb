<%= render :partial => "shared/breadcrumb", :locals => {:trail => ["Browse Archival Objects"]} %>
<div class="row-fluid">
   <div class="span3">
      The facets/search filters will go here.
   </div>
   <div class="span9 record-pane">
      <div class="btn-group">
        <% if user_can?('update_repository') %>
          <%= link_to "Create Archival Object", {:controller => :archival_objects, :action => :new}, :class => "btn" %>
        <% end %>
      </div>
      <h2>Archival Objects</h2>
      <% if not @archival_objects.blank? %>
         <table class="table table-striped table-bordered table-condensed">
           <thead>
             <tr>
               <th>Title</th>
               <th>Identifier</th>
               <th width="70px"><!-- actions --></th>
             </tr>
           </thead>
           <tbody>
           </tbody>
         </table>
      <% else %>
      <p class="alert alert-info">
         There are currently no Archival Objects in this, <strong><%= session[:repo] %></strong>, repository.
      </p>
      <% end %>
   </div>
</div>
