<% if @resource_tree %>
   <%= render :partial => "shared/breadcrumb", :locals => {:trail => [link_to(@resource_tree['title'], :controller => :resources, :action => controller.action_name, :id => @resource_tree['resource_id']), @archival_object.title]} %>
<% else %>
   <%= render :partial => "shared/breadcrumb", :locals => {:trail => [link_to("Browse Archival Objects", :controller => :archival_objects, :action => :index), @archival_object.title]} %>
<% end %>

<div class="row-fluid">
   <div class="span3">
     <div class="archives-tree-container">
      <!-- <div class="archives-tree-title">Container Hierarchy</div> -->
      <%= render :partial => "resources/tree", :locals => {:selected => @archival_object.id} %>
      <% if @resource_tree %>
         <div class="btn-toolbar archives-tree-toolbar">
           <div class="btn-group dropup">
             <a class="btn btn-mini dropdown-toggle" data-toggle="dropdown" href="#">
               Add Child
               <span class="caret"></span>
             </a>
             <ul class="dropdown-menu">
               <li><%= link_to "<span class='icon-file'></span> Analog Object".html_safe, :controller => :archival_objects, :action => :new, :resource_id => @resource_tree['resource_id'], :parent_id => @archival_object.id %></li>
             </ul>
           </div> <!-- btn-group dropup -->
           <% if @parent_id %>
           <div class="btn-group dropup">
             <a class="btn btn-mini dropdown-toggle" data-toggle="dropdown" href="#">
               Add Sibling
               <span class="caret"></span>
             </a>
             <ul class="dropdown-menu">
               <li><%= link_to "<span class='icon-file'></span> Analog Object".html_safe, :controller => :archival_objects, :action => :new, :resource_id => @resource_tree['resource_id'], :parent_id => @parent_id %></li>
             </ul>
           </div> <!-- btn-group dropup -->
           <% end %>
        <% end %>
      </div> <!-- btn-toolbar archives-tree-toolbar -->
    </div> <!-- well -->
   </div> <!-- span3 -->
   <div class="span9 record-pane" id="archival_object_container">
      <%= render :partial => "archival_objects/edit_inline" %>
   </div>
</div>