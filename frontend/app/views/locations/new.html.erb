<%= setup_context :object => @location %>

<%= form_for @location, :as => "location", :url => {:action => :create}, :html => {:class => 'form-horizontal'} do |f| %>
  <%= form_context :location, @location do |form| %>
    <div class="row-fluid">
      <div class="span3">
        <%= render :partial => "locations/sidebar" %>
      </div>
      <div class="span9 record-pane">
        <h2><%= I18n.t("actions.new_prefix") %> <%= I18n.t("location._html.singular") %>  <span class="label label-info"><%= I18n.t("location._html.singular") %></span></h2>
        <br/>
        <%= render :partial => "locations/form", :locals => {:form => form} %>
        <div class="form-actions">
          <div class="btn-group">
            <button type="submit" class="btn btn-primary"><%= I18n.t("actions.save_prefix") %> <%= I18n.t("location._html.singular") %></button>
            <button type="submit" id="createPlusOne" name="plus_one" class="btn btn-primary"><%= I18n.t("actions.save_plus_one") %></button>
          </div>
          <%= link_to I18n.t("actions.cancel"), :back, :class => "btn btn-cancel" %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
