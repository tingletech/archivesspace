<%= render :partial => "shared/breadcrumb", :locals => {:trail => [link_to("Browse Locations", :controller => :locations, :action => :index),"New Location"]} %>

<%= form_for @location, :as => "location", :url => {:action => :update}, :html => {:class => 'form-horizontal'} do |f| %>
  <%= form_context :location, @location do |form| %>
    <div class="row-fluid">
      <div class="span3">
        <%= render :partial => "locations/sidebar" %>
      </div>
      <div class="span9 record-pane">
        <h2><%= @location.id %>  <span class="label label-info">Location</span></h2>
        <br/>
        <%= render :partial => "locations/form", :locals => {:form => form} %>
        <div class="form-actions">
          <button type="submit" class="btn btn-primary">Save Location</button>
          <%= link_to "Cancel", :back, :class => "btn btn-cancel" %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
