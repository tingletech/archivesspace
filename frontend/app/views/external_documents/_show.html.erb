<%
   section_id = "external_documents" if section_id.blank?
%>

<section id="<%= section_id %>">
  <h3>External Documents</h3>

  <% external_documents.each_with_index do | document, index | %>
    <div class="external-document">
      <div class="row-fluid label-and-value">
         <div class="span3"><%= I18n.t("external_document.title") %></div>
         <div class="span9"><%= document["title"] %></div>
      </div>
      <div class="row-fluid label-and-value">
        <div class="span3"><%= I18n.t("external_document.location") %></div>
        <div class="span9">
          <% if (document["location"] =~ URI::regexp).nil? %>
            <%= document["location"] %>
          <% else %>
            <a href="<%= document["location"] %>"><%= document["location"] %></a>
          <% end %>
        </div>
      </div>
    </div>
    <% if index < external_documents.length-1 %><hr/><% end %>
  <% end %>

</section>