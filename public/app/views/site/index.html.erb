<%= setup_context :title => "Home", :suppress_breadcrumb => true %>
  <br/>

  <div class="row-fluid">
    <div class="span8">
      <div class="well">
        <h3>Welcome to ArchivesSpace.</h3>
        <p>Find what you're looking for:</p>
        <%= form_tag(url_for(:controller => :site, :action => :search), :method => :get) do %>
            <input type="text" class="input-large" style="margin: 0; height: 34px; font-size: 1.4em; width: 75%;" placeholder="<%= I18n.t("navbar.search_placeholder") %>" name="q" value="<%= params[:q] %>"/>
            <button id="global-search-button" class="btn btn-large">Search</button>
        <% end %>
      </div>
    </div>
    <div class="span4">
      <h4>Content Here</h4>
      <ul>
        <li>Item 1</li>
        <li>Item 2</li>
        <li>Item 3</li>
      </ul>
      <hr/>
      <p>Something else...</p>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span12">
      <div class="well">
        Some other information goes here.
      </div>
    </div>
  </div>